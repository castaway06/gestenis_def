@model GesTenis.reservas

@{
    ViewBag.Title = "Eliminar reserva";
}

<h2>Eliminar reserva</h2>

<h3>Está seguro que desea eliminar la reserva seleccionada?</h3>
<p>Todos los datos de su reserva se perderán</p>
