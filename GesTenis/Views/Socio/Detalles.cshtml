        <dt>
            @Html.DisplayNameFor(model => model.f_alta)
        </dt>

        <dd>
            @*@{ string fecha_alta = Model.f_alta.ToString("dd/MM/yyyy");}*@
            @Model.f_alta.ToString("dd/MM/yyyy")
        </dd>

        <dt>
            Expiración cuota
        </dt>

        @{
            string ret = null;
            if (Model.f_baja == null)
            {
                ret = "Socio no activado por primera vez";
            }
            else
            {
                DateTime fecha_baja = Model.f_baja ?? default(DateTime);
                if (DateTime.Compare(fecha_baja, DateTime.Today) < 0)
                {
                    ret = "Suscripción caducada a fecha " + fecha_baja.ToString("dd/MM/yyyy");
                }
                if (DateTime.Compare(fecha_baja, DateTime.Today) > 0)
                {
                    ret = "Suscripción activa hasta " + fecha_baja.ToString("dd/MM/yyyy");
                }
            }
        }
        <dd>
            @ret
        </dd>

    </dl>
</div>
