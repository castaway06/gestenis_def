        @{
            string ret = null;
            if (Model.f_baja == null)
            {
                ret = "Su cuenta no ha sido aún activada. Ha de proporcionar recibo del pago en la conserjería del club.";
            }
            else
            {
                DateTime fecha_baja = Model.f_baja ?? default(DateTime);
                if (DateTime.Compare(fecha_baja, DateTime.Today) == 0)
                {
                    ret = "HOY expira tu cuota !! No olvides renovarla.";
                }
                if (DateTime.Compare(fecha_baja, DateTime.Today) < 0)
                {
                    ret = "Cuota de socio caducada a fecha " + fecha_baja.ToString("dd/MM/yyyy");
                }
                if (DateTime.Compare(fecha_baja, DateTime.Today) > 0)
                {
                    ret = "Cuota de socio activa hasta " + fecha_baja.ToString("dd/MM/yyyy");
                }
            }
        }
        <dd>
            @ret
        </dd>

