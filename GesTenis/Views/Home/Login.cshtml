@model GesTenis.Models.LoginViewModel

<div class="container">

    @using (Html.BeginForm("Login", "Home", null, FormMethod.Post, new { @class = "form-signin" }))
    {
        <h2 class="form-signin-heading">Inicia sesion</h2>

        @Html.LabelFor(model => model.userId, new { @class = "control-label" })
        @Html.EditorFor(model => model.userId, new { htmlAttributes = new { @class = "form-control focus" } })

        @Html.LabelFor(m => m.userPassword, new { htmlAttributes = new { @class = "control-label" } })
        @Html.PasswordFor(m => m.userPassword, new { @class = "form-control" })

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

        <p>@Html.ActionLink("Has olvidado tu contraseña?", "RecuperarContrasena", "Home")</p>

    }

</div> <!-- /container -->
